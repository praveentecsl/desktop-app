<Window x:Class="GUI_WPF.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_WPF"
        mc:Ignorable="d"
        Title="EditWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Guest Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <Label Content="Full Name"/>
            <TextBox x:Name="FullNameTextBox"/>

            <Label Content="Email"/>
            <TextBox x:Name="EmailTextBox"/>

            <Button Content="Save" Click="SaveButton_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
