<Page x:Class="GUI_WPF.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WelcomePage">

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="NewFolder/ss.jpg" />
        </Grid.Background>

        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Welcome Text -->
        <TextBlock Text="Welcome to the Tour Guide App!"
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               FontSize="45" 
               FontWeight="Bold" 
               Margin="0,20,0,0" 
               Grid.Row="0" Grid.ColumnSpan="3" />

        <!-- Login Section -->
        <TextBlock Text="Login To IslandVibes"
               Grid.Row="1" Grid.Column="1" 
               FontSize="49" 
               FontWeight="Bold" 
               Foreground="White" 
               FontFamily="Times New Roman" 
               HorizontalAlignment="Center" 
               VerticalAlignment="Top" 
               Margin="0,20,0,10" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="1" Grid.Column="1"
                Margin="0,100,0,0">
            <Button Content="Login"
                FontSize="20"
                Width="120"
                Height="50"
                Margin="10"
                Padding="5"
                Foreground="Red"
                Background="Black"
                 />
            <Button Content="Signup"
                FontSize="20"
                Width="120"
                Height="50"
                Margin="10"
                Padding="5"
                Foreground="Red"
                Background="Black" 
                Click="SignupButton_Click"/>
        </StackPanel>

        <!-- Additional Information -->
        <TextBlock Text="Manage your tourists, bookings, and reports effortlessly."
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom" 
               FontSize="16" 
               FontStyle="Italic" 
               Margin="10"
               Grid.Row="2" Grid.ColumnSpan="3" />
    </Grid>

</Page>
